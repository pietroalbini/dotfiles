    User pietroalbini

# Fix username and add a pretty host to the unibo share
Host unibo
    HostName alfa.csr.unibo.it
    User pietro.albini@studio.unibo.it

# Custion configuration for the bastion host
Host bastion
    HostName winter.net.pietroalbini.org
    User bastion

    ForwardAgent yes
    RequestTTY yes

Host rust-bastion
    HostName 54.215.17.149
    ProxyCommand ssh pietro@10.98.0.1 -W %h:%p

    ControlPath ~/.ssh/control-%r@%h:%p
    ControlMaster auto
    ControlPersist 30m

Host rust-bots
    HostName 54.215.238.238
    User ec2-user
    ProxyCommand ssh rust-bastion -W %h:%p

